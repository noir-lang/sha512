    fn test_sha512_1(input: BoundedVec<u8, 1>) -> [u8; 64] {
        sha512_var(input)
    }

    #[export]
    fn test_sha512_100(input: BoundedVec<u8, 100>) -> [u8; 64] {
        sha512_var(input)
    }

    #[export]
