pub mod sha512 {
    pub fn digest<let N: u32>(msg: [u8; N]) -> [u8; 64] {
        crate::permutation::digest::<_, 1>(msg)
    }

    pub fn sha512_var<let N: u32>(msg: BoundedVec<u8, N>) -> [u8; 64] {
        crate::permutation::digest_var::<_, 1>(msg)
    }

    // Fuzz testing the sha512 implementation

